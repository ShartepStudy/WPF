                <Button Content="Кнопка"/>
                <Separator/>
            </ToolBar>
            <Button x:Name="button" Content="Button" Width="75"/>
            <TextBox x:Name="textBox" TextWrapping="Wrap" Text="TextBox" DockPanel.Dock="Bottom"/>
            <Grid>
                <InkCanvas/>
            </Grid>
        </DockPanel>
        <UniformGrid Grid.Row="2" FirstColumn="1">
            <GroupBox Header="GroupBox"/>
            <GroupBox Header="GroupBox"/>
            <GroupBox Header="GroupBox"/>
            <GroupBox Header="GroupBox"/>
            <GroupBox Header="GroupBox"/>
        </UniformGrid>
        <WrapPanel Grid.Column="1" Grid.Row="2" ItemHeight="50" ItemWidth="120">
            <Button Content="Button" Width="75" Margin="10,10,10,11" Height="25"/>
            <Button Content="Button" Width="100" Margin="10,10,10,11" Height="25"/>
            <Button Content="Button" Width="75" Margin="10,10,10,11" Height="25"/>
            <Button Content="Button" Width="100" Margin="10,10,10,11" Height="25"/>
            <Button Content="Button" Width="75" Margin="10,10,10,11" Height="25"/>
            <Button Content="Button" Width="100" Margin="10,10,10,11" Height="25"/>
            <Button Content="Button" Width="75" Margin="10,10,10,11" Height="25"/>
            <Button Content="Button" Width="100" Margin="10,10,10,11" Height="25"/>
            <Button Content="Button" Width="75" Margin="10,10,10,11" Height="25"/>
            <Button Content="Button" Width="100" Margin="10,10,10,11" Height="25"/>
        </WrapPanel>
        <GridSplitter HorizontalAlignment="Stretch" Grid.Row="1" ResizeDirection="Rows" Grid.ColumnSpan="4" Cursor="SizeNS"/>

    </Grid>
</Window>
